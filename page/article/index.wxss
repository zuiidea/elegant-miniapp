.article-list {
  margin-top: 90rpx;
}

.article-inner {
  padding: 30rpx;
}

.article-banner {
  display: flex;
  justify-content: center;
  align-items: center;
}

.article-image {
  width: 690rpx;
  border-radius: 30rpx;
}

.article-title {
  font-size: 28rpx;
  font-weight: 500;
}

.article-snippet, .article-datetime {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  line-height: 1.6;
}

.category-container {
  position: fixed;
  top: 0;
  z-index: 9;
  transition: all 0.4s ease-in-out;
}
